{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Action Search Tool",
            "type": "python",
            "request": "launch",
            "module": "src.tools.action_search_tool",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Main",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
